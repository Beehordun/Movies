<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ratingColor</item>
        <item name="preferenceTheme"> @style/PreferenceThemeOverlay</item>>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorControlNormal">@color/lightGray</item>
        <item name="colorControlActivated">@color/ratingColor</item>
    </style>
    <style name="DetailPageTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ratingColor</item>
        <item name="preferenceTheme"> @style/PreferenceThemeOverlay</item>>
    </style>
    <style name="Divider">
        <item name="android:background">@color/ratingColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>

    </style>

</resources>
